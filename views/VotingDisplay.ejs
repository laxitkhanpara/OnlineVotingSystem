<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/Metalink.ejs') %>

  <body>
    <!-- Loader starts-->
    <%- include ('./partials/Loader.ejs') %>
      <!-- Loader ends-->
      <!-- login page start-->
      <div class="container-fluid p-0">
        <div class="row m-0 justify-content-center">
          <div class="col-8 p-0">
            <form action="/VotSubmited" method="post">
              <div class="p-2 m-3 card bg-secondary text-center">
                <h2>Election Of <%= candidatess[0].$__parent.election_name %>
                </h2>
                <h2>Election Of <%= candidatess[0].$__parent._id %>
                </h2>

                <input hidden name="electionid" type="text" value="<%= candidatess[0].$__parent._id %>">
              </div>
              <% candidatess.forEach((item)=>{ %>
                <div class="card m-4"
                  style="background-image: url('../images/VotingCardBackground.png'); background-repeat: no-repeat;  background-size: cover; background-position: center;">
                  <div class="card-header border-bottom-light" style="padding: 15px !important">
                    <h4 class="pull-left">Candidate</h4>
                  </div>
                  <div class="card-body">
                    <div class="tabbed-card">
                      <ul class="pull-right nav nav-pills nav-secondary" id="pills-clrtab" role="tablist">
                        <li class="nav-item"><a class="nav-link active" id="pills-clrhome-tab" data-bs-toggle="pill"
                            href="#pills-clrhome" role="tab" aria-controls="pills-clrhome" aria-selected="false"><i
                              class="icofont icofont-man-in-glasses"></i>Candidate</a></li>

                        <li class="nav-item"><a class="nav-link" id="pills-clrcontact-tab" data-bs-toggle="pill"
                            href="#pills-clrcontact" role="tab" aria-controls="pills-clrcontact"
                            aria-selected="false"><i class="icofont icofont-contacts"></i>Contact</a></li>
                      </ul>
                      <div class="row">
                        <div class="col-2">
                          <img class="img-fluid rounded" src="../upload/<%=item.image%>"
                            style="height: 150px; width:150px; border-radius: 50%!important;" alt="">
                        </div>
                        <div class="col-6">
                          <div class="tab-content" id="pills-clrtabContent">
                            <div class="tab-pane fade show active" id="pills-clrhome" role="tabpanel"
                              aria-labelledby="pills-clrhome-tab">
                              <p class="h2 txt-secondary">
                                <%=item.PartyName%>
                              </p>
                              <p class="h3 txt-success">
                                <%=item.FirstName%>&nbsp;&nbsp;<%=item.LastName%>
                              </p>
                            </div>
                            <div class="tab-pane fade" id="pills-clrcontact" role="tabpanel"
                              aria-labelledby="pills-clrcontact-tab">
                              <p class="mb-0">
                              <p class="h5 txt-danger">Sins:<small>
                                  <%=item.Sins%>
                                </small></p>
                              <h6 class="f-w-900">About:<%=item.About%>
                              </h6>
                              </p>
                            </div>
                          </div>
                        </div>
                        <div class="col-2">
                          <img src="../upload/<%=item.Symbol%>" style="height: 150px; width:150px" alt="">
                        </div>
                        <div class="col-2 d-flex align-items-center justify-content-center">
                          <input class="rdbutton" value="<%=item.PartyName%>" type="radio" name="Vote"
                            onclick="handleRadioSelection(this)">
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer">
                  </div>
                </div>
                <%})%>
                  <div class="d-flex align-content-center justify-content-center">
                    <button class="btn btn-secondary" type="submit" data-bs-original-title="" title="">Submit</button>
                  </div>
            </form>
          </div>
        </div>
      </div>
      </div>
      <script>
        function handleRadioSelection(radioButton) {
          const radioButtons = document.querySelectorAll('input[name="Vote"]');
          radioButtons.forEach(btn => {
            if (btn !== radioButton) {
              btn.checked = false;
            }
          });
        }
      </script>
      <!--footer End-->
      <%- include ('./partials/script') %>
  </body>

</html>